<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_spacing">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/touch_customize_size" />

        <com.google.android.material.slider.Slider
            android:id="@+id/touch_slider_size"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/touch_customize_slider_width"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/touch_customize_rotation" />

        <com.google.android.material.slider.Slider
            android:id="@+id/touch_slider_rotation"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/touch_customize_slider_width" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/touch_customize_offset_x" />

        <com.google.android.material.slider.Slider
            android:id="@+id/touch_slider_xpos"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/touch_customize_slider_width" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/touch_customize_offset_y" />

        <com.google.android.material.slider.Slider
            android:id="@+id/touch_slider_ypos"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/touch_customize_slider_width" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/touch_button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="@string/touch_customize_button_close" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/touch_button_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="@string/touch_customize_button_reset" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
