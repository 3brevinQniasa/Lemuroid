<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.swordfish.touchinput.views.ActionButtons
        android:id="@+id/actions"
        style="@style/default_action_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cbuttons"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r1"
        app:layout_constraintWidth_percent="0.95"
        app:rotateButtons="-10" />

    <com.swordfish.touchinput.views.DirectionPad
        android:id="@+id/cbuttons"
        style="@style/n64_cbuttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.95" />

    <com.swordfish.touchinput.views.SingleButton
        android:id="@+id/r1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:label="R"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1666"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/z"
        app:layout_constraintTop_toTopOf="parent" />

    <com.swordfish.touchinput.views.SingleButton
        android:id="@+id/z"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:label="Z"
        app:layout_constraintEnd_toStartOf="@+id/r1"
        app:layout_constraintHeight_percent="0.1666"
        app:layout_constraintStart_toEndOf="@+id/start"
        app:layout_constraintTop_toTopOf="parent" />

    <com.swordfish.touchinput.views.SingleButton
        android:id="@+id/start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/button_start"
        app:layout_constraintEnd_toStartOf="@+id/z"
        app:layout_constraintHeight_percent="0.1666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
